{
  "name": "screen-recorder",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^2.3.4",
    "@electron/remote": "^2.0.8",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "framer-motion": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-scripts": "^5.0.1",
    "react-timer-hook": "^3.0.5",
    "wait-on": "^6.0.1",
    "web-vitals": "^3.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compile": "electron-webpack",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:build": "yarn compile && yarn build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron .",
    "eslint": "eslint ./src/ --ignore-path .gitignore",
    "eslint:fix": "eslint ./src/ --ignore-path .gitignore --fix"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "no-console": "error",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 115,
          "ignoreComments": true,
          "ignoreRegExpLiterals": true
        }
      ],
      "newline-before-return": "error",
      "eol-last": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "electronWebpack": {
    "commonSourceDirectory": "common",
    "main": {
      "sourceDirectory": "./public"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "main": "public/main.js",
  "homepage": "./",
  "repository": "https://github.com/michalszc/screen-recorder.git",
  "author": "Michal <michalszc05@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^21.0.0",
    "electron-builder": "^23.3.3",
    "electron-webpack": "^2.8.2",
    "eslint": "^8.24.0"
  }
}
